files:
  "/etc/nginx/sites-available/elasticbeanstalk-nginx-docker-proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      map $http_upgrade $connection_upgrade {
        default        "upgrade";
        ""            "";
      }
      
      server {
        listen 80;
      
        gzip on;
        gzip_comp_level 4;
        gzip_types text/plain text/css application/json application/javascript application/x-javascript text/javascript;
              
        if ($time_iso8601 ~ "^(\d{4})-(\d{2})-(\d{2})T(\d{2})") {
          set $year $1;
          set $month $2;
          set $day $3;
          set $hour $4;
        }
      
        access_log /var/log/nginx/access.log;
              
        location / {
          proxy_pass          http://127.0.0.1:8000;
          proxy_http_version  1.1;
          
          proxy_set_header    Connection          $connection_upgrade;
          proxy_set_header    Upgrade             $http_upgrade;
          proxy_set_header    Host                $host;
          proxy_set_header    X-Real-IP           $remote_addr;
          proxy_set_header    X-Forwarded-For     $proxy_add_x_forwarded_for;
        }

        location /static/ {
          alias /var/app/current/staticfiles/;
          expires 30d;
          access_log off;
          add_header Cache-Control "public";
          
          location ~* \.(css)$ {
              add_header Content-Type "text/css";
          }
          
          location ~* \.(js)$ {
              add_header Content-Type "application/x-javascript";
          }
        }

        location /media/ {
          alias /var/app/current/media/;
          expires 30d;
          access_log off;
        }
      }

container_commands:
  01_remove_webapp_static:
    command: "rm -rf /var/app/current/staticfiles/"
  02_create_webapp_static:
    command: "mkdir -p /var/app/current/staticfiles/"
  03_collect_static:
    command: "source /var/app/venv/*/bin/activate && python manage.py collectstatic --noinput"
  04_fix_permissions:
    command: |
      chmod 755 /var/app/current/staticfiles
      chown -R webapp:webapp /var/app/current/staticfiles/